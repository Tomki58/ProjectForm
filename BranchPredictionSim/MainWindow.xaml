<Window x:Class="BranchPredictionSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BranchPredictionSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="717.469" Width="1306.543">
    <Grid>
        <TextBox x:Name="AsmCodeFile" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Margin="10,0,0,0"/>
        <Button x:Name="StepButton" Content="Шаг" HorizontalAlignment="Left" Margin="632,61,0,0" VerticalAlignment="Top" Width="184" Height="61" FontSize="24" Click="StepButton_Click" IsEnabled="False"/>
        <Button x:Name="RunButton" Content="Вычислить" HorizontalAlignment="Left" Margin="349,61,0,0" VerticalAlignment="Top" Width="283" Height="61" FontSize="24" Click="RunButton_Click" IsEnabled="False"/>
        <ComboBox FontSize="24" x:Name="PredictorType" HorizontalAlignment="Left" Margin="349,0,0,0" VerticalAlignment="Top" Width="283" Height="61" SelectionChanged="PredictorType_SelectionChanged" SelectedIndex="0">
            <ComboBoxItem FontSize="24" Content="AlwaysPredict"/>
            <ComboBoxItem FontSize="24" Content="BTFNT"/>
            <ComboBoxItem FontSize="24" Content="1-bit predictor"/>
            <ComboBoxItem FontSize="24" Content="2-bit predictor"/>
            <ComboBoxItem FontSize="24" Content="n-bit predictor"/>
            <ComboBoxItem FontSize="24" Content="BNTFT"/>
            <ComboBoxItem FontSize="24" Content="Two level global prediction"/>
            <ComboBoxItem FontSize="24" Content="Gshare"/>
        </ComboBox>
        <TextBox x:Name="Params" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="184" Margin="632,0,0,0" FontSize="24" IsEnabled="False"/>
        <Button x:Name="StartButton" IsEnabled ="false" Content="Старт" HorizontalAlignment="Left" Margin="816,0,0,0" VerticalAlignment="Top" Width="277" Height="61" FontSize="24" Click="StartButton_Click"/>
        <TextBox x:Name="MaxIter" HorizontalAlignment="Left" Height="61" Margin="1093,61,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="196" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="816,61,0,0" TextWrapping="Wrap" Text="Максимальное количество итераций" VerticalAlignment="Top" Height="61" Width="277" FontSize="14" FontStyle="Italic" FontWeight="Bold" TextDecorations="Underline"/>
        <Button x:Name="ChooseFile" Content="Открыть" HorizontalAlignment="Left" Margin="181,0,0,0" VerticalAlignment="Top" Width="168" Height="61" FontSize="24" Click="ChooseFile_Click"/>
        <TextBox x:Name="AsmCode" AcceptsReturn="True" HorizontalAlignment="Left" Height="625" Margin="10,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="339" TextChanged="AsmCode_TextChanged"/>
        <Button x:Name="StopButton" Content="Стоп" HorizontalAlignment="Left" Margin="1093,0,0,0" VerticalAlignment="Top" Width="196" Height="61" FontSize="24" Click="StopButton_Click" IsEnabled="False"/>
        <Grid x:Name="ResultsGrid" HorizontalAlignment="Left" Height="564" Margin="349,122,0,0" VerticalAlignment="Top" Width="950">
            <DataGrid x:Name="LabelTable" HorizontalAlignment="Left" Height="322" VerticalAlignment="Top" Width="196" Margin="744,0,0,0" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название метки" Binding ="{Binding Key}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Адрес метки" Binding="{Binding Value}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="PredictionStats" TextWrapping="Wrap" FontSize="24" Margin="0,0,349,520" Text="Статистика предсказаний: "/>
            <DataGrid Visibility="Visible" x:Name="RegistersFlags" HorizontalAlignment="Left" Height="113" Margin="744,322,0,0" VerticalAlignment="Top" Width="196" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Регистр" Binding ="{Binding Key}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Значение" Binding="{Binding Value.Value}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Visibility="Visible" x:Name="Flags" HorizontalAlignment="Left" Height="119" Margin="744,435,0,0" VerticalAlignment="Top" Width="196" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Флаг" Binding ="{Binding Key}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Значение" Binding="{Binding Value.Flag}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="NextCmdAddr" HorizontalAlignment="Left" Margin="0,49,0,0" TextWrapping="Wrap" Text="Адрес следующей команды:" VerticalAlignment="Top" Height="35" Width="601" FontSize="24"/>
            <DataGrid x:Name="StackValues" HorizontalAlignment="Left" Height="282" Margin="606,0,0,0" VerticalAlignment="Top" Width="138">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Стек" Binding="{Binding}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="EIPValues" HorizontalAlignment="Left" Height="272" Margin="606,282,0,0" VerticalAlignment="Top" Width="138">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="EIP" Binding="{Binding}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="PredictionHistory" HorizontalAlignment="Left" Height="465" Margin="0,89,0,0" VerticalAlignment="Top" Width="312" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Реальное исполнение" Binding="{Binding Value.Key}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Предсказание" Binding="{Binding Value.Value}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Номер строки" Binding="{Binding Key}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <TextBlock x:Name="FakeAsm" HorizontalAlignment="Left" Margin="10,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="625" Width="339" Visibility="Hidden"/>

    </Grid>
</Window>
